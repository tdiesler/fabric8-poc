<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <parent>
        <groupId>io.fabric8.poc</groupId>
        <artifactId>fabric8-container-wildfly</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>fabric8-container-wildfly-extension</artifactId>
    <name>Fabric8 :: Container :: WildFly :: Extension</name>

    <!-- Properties -->    
    <properties>
        <wildfly.patch>${project.build.directory}/${project.artifactId}-${project.version}-patch</wildfly.patch>
    </properties>
    
    <dependencies>
        <dependency>
            <groupId>org.jboss.gravia</groupId>
            <artifactId>gravia-container-wildfly-extension</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.gravia</groupId>
            <artifactId>gravia-provision</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.gravia</groupId>
            <artifactId>gravia-repository</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.gravia</groupId>
            <artifactId>gravia-resolver</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.gravia</groupId>
            <artifactId>gravia-resource</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.gravia</groupId>
            <artifactId>gravia-runtime-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wildfly</groupId>
            <artifactId>wildfly-server</artifactId>
        </dependency>
        
        <!-- Provided Dependencies -->
        <dependency>
            <groupId>io.fabric8.poc</groupId>
            <artifactId>fabric8-container-karaf-managed</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.fabric8.poc</groupId>
            <artifactId>fabric8-container-tomcat-managed</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.fabric8.poc</groupId>
            <artifactId>fabric8-container-wildfly-managed</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.fabric8.poc</groupId>
            <artifactId>fabric8-core</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.enterprise</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Gravia-Identity>${project.artifactId};version=${project.version}</Gravia-Identity>
                            <Service-Component>
                                OSGI-INF/io.fabric8.core.internal.BootstrapCompleteImpl.xml,\
                                OSGI-INF/io.fabric8.core.internal.BootstrapService.xml,\
                                OSGI-INF/io.fabric8.core.internal.ClusterDataStoreImpl.xml,\
                                OSGI-INF/io.fabric8.core.internal.ComponentConfigurer.xml,\
                                OSGI-INF/io.fabric8.core.internal.ConfigurationManager.xml,\
                                OSGI-INF/io.fabric8.core.internal.ContainerRegistry.xml,\
                                OSGI-INF/io.fabric8.core.internal.ContainerServiceImpl.xml,\
                                OSGI-INF/io.fabric8.core.internal.EventDispatcherImpl.xml,\
                                OSGI-INF/io.fabric8.core.internal.HostDataStoreImpl.xml,\
                                OSGI-INF/io.fabric8.core.internal.MBeansProvider.xml,\
                                OSGI-INF/io.fabric8.core.internal.PortManagerImpl.xml,\
                                OSGI-INF/io.fabric8.core.internal.ProfileServiceImpl.xml,\
                                OSGI-INF/io.fabric8.core.internal.ProfileRegistry.xml,\
                                OSGI-INF/io.fabric8.spi.internal.BasicRuntimeService.xml,\
                                OSGI-INF/io.fabric8.spi.internal.ContainerManagerImpl.xml,\
                                OSGI-INF/io.fabric8.spi.internal.ProfileManagerImpl.xml,\
                                OSGI-INF/io.fabric8.spi.internal.ProfileBuilderService.xml,\
                                OSGI-INF/io.fabric8.spi.internal.ProfileVersionBuilderService.xml,\
                                OSGI-INF/io.fabric8.spi.permit.PermitManagerImpl.xml,\
                                OSGI-INF/org.jboss.gravia.provision.internal.ProvisionerService.xml,\
                                OSGI-INF/org.jboss.gravia.repository.internal.RepositoryMBeanService.xml,\
                                OSGI-INF/org.jboss.gravia.repository.internal.RepositoryService.xml,\
                                OSGI-INF/org.jboss.gravia.resolver.internal.ResolverService.xml
                            </Service-Component>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
